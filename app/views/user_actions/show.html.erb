<%= render :layout => 'administrator/navigation' do %>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>User:</strong>
    <%= @user_action.user %>
  </p>

  <p>
    <strong>Action type:</strong>
    <% if @user_action.is_question %>
      <%= link_to @user_action.action_type_string, question_path(@user_action.action_id) %>
    <% elsif @user_action.is_linkto %>
      <%= link_to @user_action.action_type_string, link_to_path(@user_action.action_id) %>
    <% else %>
      <%= @user_action.action_type_string %>
    <% end %>
  </p>

  <%= link_to 'Edit', edit_user_action_path(@user_action) %> |
  <%= link_to 'Back', user_actions_path %>

<% end %>
