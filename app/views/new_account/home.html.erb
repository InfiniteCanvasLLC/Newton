									<%= label_tag(cur_question["metadata_four"]) %>
								</div>
							<% end %>
						 <% elsif cur_question["question_type"] == 1 %>
							<%= form_for cur_question do |f| %>
								<div>
							    	<%= radio_button_tag("Yes", :metadata_one) %>
									<%= label_tag("Yes") %>
								</div>
								<div>
									<%= radio_button_tag("Yes", :metadata_two) %>
									<%= label_tag("No") %>
								</div>
							<% end %>
						 <% elsif cur_question["question_type"] == 2 %>
							<div>
						 		<%= number_field_tag :my_number_field, nil, min: 0, max: 10 %>
							</div>
						 <% elsif cur_question["question_type"] == 3 %>
							<div>
								<%= text_field_tag :my_text_field, nil %>
							</div>
						 <% end %>
						 </div>
						
