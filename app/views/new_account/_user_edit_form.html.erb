<div id="user_edit_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">

      <div class="modal-header bg-primary">
        <h3 class="modal-title">User</h3>
      </div>



      <%= form_tag({action: "edit_user", method: "post"}, {role: "form", id: "user_edit_form"}) do %>
        <div class="modal-body">

          <div class="form-group">
            <%= label_tag(:name, "Change your name") %>
            <br />
            <%= text_field_tag(:name, nil, :class => 'form-control') %>
          </div>

          <div class="form-group">
            <%= label_tag(:email, "Change your primary email") %>
            <br />
            <%= email_field_tag(:email, nil, :class => 'form-control') %>
          </div>

          <div class="form-group">
            <%= label_tag(:email, "Change your secondary email") %>
            <br />
            <%= email_field_tag(:secondary_email, nil, :class => 'form-control') %>
          </div>

          <div class="form-group">
            <label>Edit your gender</label>
            <br />
            <%= radio_button_tag :gender, '0' %>
            <%= label_tag(:gender_female, "Female") %><br>
            <%= radio_button_tag :gender, '1' %>
            <%= label_tag(:gender_male, "Male") %><br>
          </div>

          <div class="form-group">
            <%= label_tag(:birthday, "Edit your birthday") %>
            <br />
            <%= date_field_tag(:birthday) %>
          </div>

          <div class="form-group">
            <%= label_tag(:description, "Change your zipcode") %>
            <br />
            <%= number_field_tag( :zip_code, nil, :min => 0, :max => 99999 )%><br><br>
          </div>

          <div class="form-group">
            <%= label_tag(:description, "Change your personal description") %>
            <br />
            <%= text_area_tag(:description, nil, :class => 'form-control', :rows => 5) %>
          </div>


        </div>

        <div class="modal-footer bg-dark">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= submit_tag("Edit", class: 'btn btn-success') %>
        </div>
      <% end %>



      <script>
        $("#user_edit_modal").on("show.bs.modal",
          function ()
          {
            $("#name").val('');
          });

        $("#user_form").submit(
          function (event)
          {
            $("#user_edit_modal").modal('hide');
          });
      </script>
    </div>
  </div>
</div>
