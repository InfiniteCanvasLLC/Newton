<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<div class="container">
    <div class="fb-profile">
        <%= image_tag("UserPage/concert-audience.jpg", align: "left", class: "fb-image-lg", alt: "Profile image example") %> 
        <img align="left" class="fb-image-profile thumbnail" src=<%= (session[:fb_info])["image"] %> alt="Profile image example"/> 
        <div class="fb-profile-text">
            <h1><%= (session[:fb_info])["name"] %></h1>
            <p><%= (session[:fb_info])["about"] %></p>
        </div>
    </div>

</div>  
    <div class="row">
        <div class="col-md-12">
            <span style="font-size: 2em">You have <%= @num_actions %> Actions</span>

            <table class="table">
                <thead>
                    <tr>
                        <th>Question Text</th>
                        <th>Question Type</th>
                        <th>Question Metadata 1</th>
                        <th>Question Metadata 2</th>
                        <th>Question Metadata 3</th>
                        <th>Question Metadata 4</th>
                    </tr>
                </thead>

                <tbody>
                    <% @questions.each do |cur_question| %>
                    <tr>
                        <td><%= cur_question["text"] %></td>
                        <td><%= cur_question["question_type"] %></td>
                        <td><%= cur_question["metadata_one"] %></td>
                        <td><%= cur_question["metadata_two"] %></td>
                        <td><%= cur_question["metadata_three"] %></td>
                        <td><%= cur_question["metadata_four"] %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>

</div> <!-- /container -->  

