<div id="feedback_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
    
      <div class="modal-header bg-primary">
        <h3 class="modal-title">Feedback</h3>
      </div>
      
      <%= form_for UserFeedback.new, url: {action: "submit_user_feedback", method: "post"}, html: {role: "form", remote: true} do |f| %>
        <div class="modal-body">
          <div class="form-group">      
            <label>How was your experience?</label>
            <br />
            <%= f.radio_button :sentiment, 'good', class: "sentiment" %>
            <label class="sentiment-happy" for="user_feedback_sentiment_good"></label>
          
            <%= f.radio_button :sentiment, 'bad', class: "sentiment" %>
            <label class="sentiment-sad" for="user_feedback_sentiment_bad"></label>
          </div>
          
          <div class="form-group">      
            <%= f.label :issue_type, "Issue Type" %>
            <br />
            <%= f.select :issue_type, [['Featue Request', 'feature'], ['Bug', 'bug'], ['Other', 'other']] %>
          </div>  
          
          <div class="form-group">
            <label for="user_feedback_email">Email <small><em class"help-block">(Optional)</em></small></label>
            <br />
            <%= f.email_field :email, class: "form-control" %>        
          </div>  
          
          <div class="form-group">
            <%= f.label :description, "Tell us more..." %>
            <br />
            <%= f.text_area :description, rows: 5, class: "form-control"%>        
          </div>            
        </div>
      
        <div class="modal-footer bg-dark">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= f.submit "Send", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

  </div>
</div>
