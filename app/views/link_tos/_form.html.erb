<%= form_for(@link_to) do |f| %>
  <% if @link_to.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link_to.errors.count, "error") %> prohibited this link_to from being saved:</h2>

      <ul>
      <% @link_to.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <div class="col-md-12">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="field row">
    <div class="col-md-12">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </div>
  </div>
  <div class="field row">
    <div class="col-md-12">
      <%= f.label :url %><br>
      <%= f.text_area :url %>
    </div>
  </div>
  <div class="field row">
    <div class="col-md-12">
      <%= f.label :link_text %><br>
      <%= f.text_field :link_text %>
    </div>
  </div>
  <div class="field row">
    <div class="col-md-12">
      <%= f.label :icon_style %><br>
      <%= f.text_field :icon_style %>
    </div>
  </div>
  <div class="field row">
    <div class="col-md-12">
      <%= f.label :panel_style %><br>
      <%= f.text_field :panel_style %>
    </div>
  </div>
  <div class="field row">
    <div class="col-md-12">
      <%= f.label :type_id %><br>
      <%= f.select :type_id, @link_to_types_list %>
      <br><br>
    </div>
  </div>
  <div class="actions row">
    <div class="col-md-12">
      <%= f.submit :class => 'btn btn-primary' %>
      <% if locals[:youtube_auto_fillout] == true %>
        <%= f.submit "Auto Fillout YouTube", :class => 'btn btn-primary' %>
      <% end %>
      <br><br>
    </div>
  </div>
<% end %>

<p>
<br>
<%= image_tag("embeded_link_url.png") %>
<br>
<div>
Note: when creating a YouTube linkto, in order for it to render correctly, in the link section of the linkto, please us the above link (highlighted in blue).
On YouTube, you can find it under share/embedded use the contents of *src* (without the quote marks)
</div>
</p>
