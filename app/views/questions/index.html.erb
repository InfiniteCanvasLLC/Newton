<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Question type</th>
      <th>Metadata one</th>
      <th>Metadata two</th>
      <th>Metadata three</th>
      <th>Metadata four</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.text %></td>
        <td><%= question.question_type %></td>
        <td><%= question.metadata_one %></td>
        <td><%= question.metadata_two %></td>
        <td><%= question.metadata_three %></td>
        <td><%= question.metadata_four %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

